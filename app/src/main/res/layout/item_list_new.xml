<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_rl"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?android:attr/selectableItemBackground"
    tools:ignore="UnknownId">

    <LinearLayout
        android:id="@+id/item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/folder" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <apk.tool.patcher.ui.widget.FontTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:longClickable="false"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="?text_color"
                android:textSize="16sp" />

            <apk.tool.patcher.ui.widget.FontTextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:text="cool"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>


    <ImageButton
        android:id="@+id/empty"
        style="?attr/borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_above="@+id/bottom_edge"
        android:layout_below="@+id/top_edge"
        android:layout_marginLeft="-96dp" />

    <ImageButton
        android:id="@+id/delete"
        style="?attr/borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_above="@+id/bottom_edge"
        android:layout_below="@+id/top_edge"
        android:layout_marginLeft="-96dp"
        android:src="@drawable/ic_delete" />

    <ImageButton
        android:id="@+id/rename"
        style="?attr/borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_above="@+id/bottom_edge"
        android:layout_below="@+id/top_edge"
        android:layout_marginLeft="-48dp"
        android:src="@drawable/ic_font" />

    <ImageButton
        android:id="@+id/operation_1"
        style="?attr/borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_above="@+id/bottom_edge"
        android:layout_below="@+id/top_edge"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-48dp"
        android:src="@drawable/ic_play" />

    <ImageButton
        android:id="@+id/operation_2"
        style="?attr/borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_above="@+id/bottom_edge"
        android:layout_below="@+id/top_edge"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-96dp"
        android:src="@drawable/settings_outline" />

    <ImageButton
        android:id="@+id/operation_3"
        style="?attr/borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_above="@+id/bottom_edge"
        android:layout_below="@+id/top_edge"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-144dp"
        android:src="@drawable/ic_unarchive" />

</RelativeLayout>

